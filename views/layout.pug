doctype html
html(lang='fi')
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  
  head
    title= title + ' - Teatterivaraus'
    <link rel="icon" type="image/png" href="/images/icon.png">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,700" rel="stylesheet">
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    link(rel='stylesheet', href='/stylesheets/style.css')
  
  body.page
    header.header
      nav.navbar
        a.navbar__brand(href='/' rel='home' title='Siirry etusivulle')
          img.navbar__logo(src='/images/logo-vertical.svg' alt='Teatterivaraus-logo')
          
        ul#nav.navbar__nav
          each navItem in [{title: 'Tarina', href: '/tarina'}, {title: 'Ota käyttöön', href: '/ota-kayttoon'}, {title: 'Kirjaudu', href: '/app'}]
            - var isActive = (navItem.title == title)
            - var className = (isActive ? 'navbar__item navbar__item--active' : 'navbar__item')
            li(class=className)
              a.navbar__link(href=navItem.href)= navItem.title
              
